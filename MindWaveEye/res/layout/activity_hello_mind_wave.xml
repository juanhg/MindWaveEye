<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HelloMindWaveActivity" >

    <TextView
        android:id="@+id/textViewAttention"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/empty"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textViewMeditation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/empty"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/eyeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7" >

        <ImageView
            android:id="@+id/imageViewBlink"
            android:layout_width="178dp"
            android:layout_height="142dp"
            android:layout_gravity="center|right"
            android:contentDescription="@string/BlinkDescription"
            android:src="@drawable/white_eye" />

        <TextView
            android:id="@+id/textViewBlink"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/zero"
            android:textSize="40sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewInfo2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/Info2"
        android:textSize="20sp" />

</LinearLayout>